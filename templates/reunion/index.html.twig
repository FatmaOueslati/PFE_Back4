<!DOCTYPE html>

<title>Reunion index</title>

{% block body %}
    <h1>Reunion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>DateReunion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reunion in reunions %}
            <tr>
                <td>{{ reunion.id }}</td>
                <td>{{ reunion.name }}</td>
                <td>{{ reunion.description }}</td>
                <td>{{ reunion.dateReunion ? reunion.dateReunion|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('reunion_show', {'id': reunion.id}) }}">show</a>
                    <a href="{{ path('reunion_edit', {'id': reunion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reunion_new') }}">Create new</a>
{% endblock %}
